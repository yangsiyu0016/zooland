<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zoo.mapper.erp.product.SpecParamMapper">
	<resultMap type="com.zoo.model.erp.product.SpecParam" id="BaseResultMap">
		<id column="id" property="id"/>
		<result column="typeId" property="typeId"/>
		<result column="name" property="name"/>
		<result column="groupId" property="groupId"/>
		<result column="isNumeric" property="isNumeric"/>
		<result column="generic" property="generic"/>
		<result column="searching" property="searching"/>
		<result column="segments" property="segments"/>
		<result column="unit" property="unit"/>
	</resultMap>
	<select id="getParamsByGroupId" resultMap="BaseResultMap">
		select * from spec_param where groupId=#{groupId}
	</select>
	<select id="getSpecParams" resultMap="BaseResultMap">
		select * from spec_param where typeId=#{typeId}
	</select>
	<select id="getParamById" resultMap="BaseResultMap">
		select * from spec_param where id=#{id}
	</select>
	<insert id="addParam">
		insert into spec_param (id,name,typeId,groupId,isNumeric,generic,searching,segments,unit) values(#{param.id},#{param.name},#{param.typeId},#{param.groupId},#{param.isNumeric},#{param.generic},#{param.searching},#{param.segments},#{param.unit})
	</insert>
	<update id="updateParam">
		update spec_param set name=#{param.name} where id=#{param.id}
	</update>
</mapper>