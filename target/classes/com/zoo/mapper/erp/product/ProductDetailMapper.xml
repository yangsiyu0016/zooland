<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zoo.mapper.erp.product.ProductDetailMapper">
	<resultMap type="com.zoo.model.erp.product.ProductDetail" id="BaseResultMap">
		<id column="productId" property="productId"/>
		<result column="description" property="description"/>
		<result column="genericSpec" property="genericSpec"/>
		<result column="specialSpec" property="specialSpec"/>
		<result column="packageList" property="packageList"/>
		<result column="afterService" property="afterService"/>
	</resultMap>
	<select id="getProductDetailById" resultMap="BaseResultMap">
		select * from product_detail where productId=#{id}
	</select>
	<insert id="addProductDetail">
		insert into product_detail (productId,description,genericSpec,specialSpec,packageList,afterService) 
		values(#{productDetail.productId},#{productDetail.description},#{productDetail.genericSpec},#{productDetail.specialSpec},#{productDetail.packageList},#{productDetail.afterService})
	</insert>
</mapper>