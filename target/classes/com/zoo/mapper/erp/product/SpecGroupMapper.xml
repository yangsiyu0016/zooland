<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zoo.mapper.erp.product.SpecGroupMapper">
	<resultMap type="com.zoo.model.erp.product.SpecGroup" id="BaseResultMap">
		<id column="id" property="id"/>
		<result column="typeId" property="typeId"/>
		<result column="name" property="name"/>
	</resultMap>
	<select id="getGroupByTypeId" resultMap="BaseResultMap">
		select * from spec_group where typeId=#{typeId}
	</select>
	<insert id="addGroup">
		insert into spec_group (id,name,typeId) values(#{group.id},#{group.name},#{group.typeId})
	</insert>
	<update id="updateGroup">
		update spec_group set name=#{group.name} where id=#{group.id}
	</update>
</mapper>